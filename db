const { Pool } = require('pg');

const pool = new Pool({
  connectionString: process.env.DB_CONNECTION,
  ssl: {
    rejectUnauthorized: false, // Required for Railway
  },
});

pool.connect((err) => {
  if (err) {
    console.error('PostgreSQL connection error:', err.stack);
  } else {
    console.log('Connected to PostgreSQL');
  }
});

module.exports = pool;